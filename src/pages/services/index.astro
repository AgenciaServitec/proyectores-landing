---
import { BaseLayout } from "../../layouts";
import { Button, CardProduct, Title } from "../../components";
import { services } from "../../data-list";
---

<BaseLayout title="Productos">
  <main>
    <Title title="NUESTROS">Servicios</Title>
    <section class="card-list">
      {
        services.map((product, index) => (
          <CardProduct key={index} imagePath={product?.imagePath} />
        ))
      }
    </section>
    <section class="quote-button">
      <a href="/contact">
        <Button type="tertiary">Cotizar otra llanta</Button>
      </a>
    </section>
  </main>
</BaseLayout>

<style lang="scss">
  main {
    width: 100%;
    padding: 2em;
  }

  .card-list {
    margin: auto;
    max-width: 1280px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1em;
    justify-content: center;
  }

  .quote-button {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 6em 0 2em;

    a {
      text-decoration: auto;
    }
  }
</style>
