---
import { BaseLayout } from "../../layouts";
import { AboutUsComponent } from "../../components";
---

<BaseLayout title="Nosotros">
  <main>
    <AboutUsComponent />
  </main>
</BaseLayout>

<style lang="scss">
  main {
    width: 100%;
    padding: 12em 2em 2em 2em;
    display: flex;
    justify-content: center;
    align-items: center;
    @media (max-width: 576px) {
      padding: 3em 1.5em;
    }
  }

  .about-us {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-wrap: wrap-reverse;
    gap: 2rem;
    padding: 0 7rem;
    @media (max-width: 1200px) {
      padding: 0 2rem;
    }

    &__img {
      max-width: 500px;
      height: 280px;

      img {
        width: 100%;
        height: 100%;
        border-radius: 15px;
      }
    }

    &__text {
      width: 35%;

      &-title {
        font-size: 3.5rem;
        line-height: 1;
        text-transform: uppercase;
        font-style: italic;
        color: #fff000;
        margin-bottom: 0.625rem;
        @media (max-width: 576px) {
          font-size: 1.5rem;
        }
      }

      &-description {
        text-align: left;
        font-size: 1.2rem;
      }

      @media (max-width: 1024px) {
        width: 100%;
      }
    }
  }
</style>
