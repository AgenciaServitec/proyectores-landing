---
const { name, imagePath } = Astro.props;
---

<article class="product">
  <div class="product__img">
    <img src={imagePath} alt={name} />
  </div>
</article>

<style lang="scss">
  .product {
    width: 100%;
    text-transform: uppercase;
    font-weight: 700;
    position: relative;
    padding: 0.2rem;
    border-radius: 7px;
    display: flex;
    flex-direction: column;
    gap: 0.85rem;

    &__img {
      width: 100%;
      height: auto;
      background-color: #111315;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
  }
</style>
