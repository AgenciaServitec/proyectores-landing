---
import ContentWidth from "../components/ui/ContentWidth.astro";

type Step = { title: string; description: string };

interface Props {
  title?: string;
  description?: string;
  steps?: Step[];
}

const {
  title = "Cómo trabajamos",
  description = "Un proceso claro para que sepas qué sigue desde el primer mensaje hasta la entrega.",
  steps = [
    { title: "1) Nos escribes", description: "Cuéntanos la falla, marca/modelo y tu ubicación. (WhatsApp o formulario)" },
    { title: "2) Diagnóstico", description: "Revisamos el equipo y te indicamos opciones, tiempos y costo estimado." },
    { title: "3) Reparación / servicio", description: "Realizamos el trabajo con repuestos de calidad y pruebas." },
    { title: "4) Entrega y garantía", description: "Te entregamos el equipo funcionando y con respaldo del servicio." },
  ],
} = Astro.props;
---

<section class="mb-20">
  <ContentWidth>
    <header class="max-w-2xl">
      <h2 class="text-2xl font-semibold md:text-3xl">{title}</h2>
      <p class="mt-3 text-[color:var(--color-muted)]">{description}</p>
    </header>

    <div class="mt-10 grid gap-4 lg:grid-cols-4">
      {steps.map((step) => (
        <div
          class="
            rounded-[var(--radius-lg)]
            border border-[color:var(--color-border)]
            bg-[color:var(--color-card)]
            p-6 shadow-[var(--shadow-card)]
          "
        >
          <div class="flex items-start justify-between gap-4">
            <h3 class="text-base font-semibold">{step.title}</h3>
            <span class="h-2 w-2 rounded-full bg-[color:var(--color-primary)]"></span>
          </div>
          <p class="mt-2 text-sm text-[color:var(--color-muted)]">{step.description}</p>
        </div>
      ))}
    </div>

    <div class="mt-8 flex flex-col gap-3 rounded-[var(--radius-lg)] border border-[color:var(--color-border)] bg-[color:var(--color-card)] p-6 md:flex-row md:items-center md:justify-between">
      <p class="text-sm text-[color:var(--color-muted)]">
        Tip: si puedes, adjunta una foto del proyector o del mensaje de error para acelerar el diagnóstico.
      </p>
      <a
        href="/cotizar"
        class="
          inline-flex items-center justify-center
          rounded-[var(--radius-md)]
          border border-[color:var(--color-border)]
          px-5 py-2.5 font-medium
          text-[color:var(--color-foreground)]
          transition hover:border-[color:var(--color-accent)]
          hover:text-[color:var(--color-accent)]
        "
      >
        Ir al formulario
      </a>
    </div>
  </ContentWidth>
</section>
