---
import ContentWidth from "../components/ui/ContentWidth.astro";

type Step = { title: string; description: string };

interface Props {
  title?: string;
  description?: string;
  steps?: Step[];
}

const {
  title = "Tu proyector listo en 4 pasos",
  description = "Un proceso transparente diseñado para devolverte la mejor calidad de imagen sin complicaciones.",
  steps = [
    { title: "Contacto", description: "Envíanos marca, modelo y falla por WhatsApp o formulario." },
    { title: "Diagnóstico", description: "Evaluación técnica precisa con presupuesto detallado y tiempos." },
    { title: "Reparación", description: "Intervención técnica con repuestos originales y pruebas de estrés." },
    { title: "Garantía", description: "Entrega de equipo certificado con respaldo total de nuestro servicio." },
  ],
} = Astro.props;
---

<section class="py-24 text-white">
  <ContentWidth>
    <header class="max-w-3xl mb-16">
      <h2 class="text-3xl md:text-5xl font-black tracking-tight leading-tight">
        Proceso de <span class="text-yellow-400">Servicio Certificado</span>
      </h2>
      <p class="mt-4 text-gray-400 text-lg">{description}</p>
    </header>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4 relative">
      {steps.map((step, index) => (
        <div class="relative group">
          <div class="mb-6 flex items-center gap-4">
            <span class="flex h-12 w-12 items-center justify-center rounded-full border border-yellow-400/30 bg-yellow-400/10 text-xl font-black text-yellow-400 group-hover:bg-yellow-400 group-hover:text-black transition-all duration-300">
              {index + 1}
            </span>
            <div class="h-[1px] flex-1 bg-gradient-to-r from-yellow-400/30 to-transparent hidden lg:block"></div>
          </div>

          <h3 class="text-xl font-bold mb-3 group-hover:text-yellow-400 transition-colors">
            {step.title}
          </h3>
          <p class="text-gray-400 text-sm leading-relaxed">
            {step.description}
          </p>
        </div>
      ))}
    </div>

    <div class="mt-20 relative overflow-hidden rounded-2xl border border-white/10 bg-white/[0.02] p-8 md:p-12">
      <div class="absolute -right-20 -bottom-20 h-64 w-64 rounded-full bg-yellow-400/5 blur-[100px]"></div>

      <div class="relative z-10 flex flex-col md:flex-row md:items-center md:justify-between gap-8">
        <div class="max-w-xl">
          <p class="text-yellow-400 font-bold text-sm uppercase tracking-widest mb-2">Consejo de experto</p>
          <p class="text-gray-200 text-lg leading-snug">
            ¿Quieres un presupuesto más rápido? Adjunta una <span class="text-white font-bold text-xl uppercase">foto</span> del error o del modelo del equipo.
          </p>
        </div>

        <a
          href="/cotizar"
          class="inline-flex items-center justify-center rounded-xl bg-white px-8 py-4 text-sm font-black text-black transition-all hover:bg-yellow-400 hover:scale-105 active:scale-95 whitespace-nowrap"
        >
          Iniciar Cotización
        </a>
      </div>
    </div>
  </ContentWidth>
</section>