---
import ContentWidth from "../components/ui/ContentWidth.astro";

interface Props {
  title?: string;
  description?: string;
  whatsappLink?: string;
  quoteLink?: string;
}

const {
  title = "¿Listo para recuperar la claridad de tu imagen?",
  description = "No permitas que una falla detenga tus presentaciones. Cotiza ahora la reparación o mantenimiento de tu equipo.",
  whatsappLink = "https://wa.me/51941801827?text=Hola%20Servitec,%20quiero%20cotizar%20un%20servicio%20para%20mi%20proyector.",
  quoteLink = "/cotizar",
} = Astro.props;
---

<section class="py-20 ">
  <ContentWidth>
    <div class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-yellow-400 via-yellow-500 to-yellow-600 p-1">
      <div class="relative bg-[#0a0a0a] rounded-[calc(1.5rem-1px)] overflow-hidden">

        <div class="absolute -right-20 -top-20 h-64 w-64 rounded-full bg-yellow-400/10 blur-[100px]"></div>
        <div class="absolute -left-20 -bottom-20 h-64 w-64 rounded-full bg-yellow-400/5 blur-[100px]"></div>

        <div class="flex flex-col lg:flex-row items-center justify-between gap-10 p-8 md:p-16 relative z-10">

          <div class="text-center lg:text-left max-w-2xl">
            <span class="inline-block px-4 py-1.5 mb-6 text-[11px] font-black tracking-widest text-black uppercase bg-yellow-400 rounded-full">
              Atención en Lima
            </span>

            <h2 class="text-3xl md:text-5xl font-black text-white leading-tight tracking-tighter">
              {title}
            </h2>

            <p class="mt-6 text-gray-400 text-lg md:text-xl leading-relaxed">
              {description}
            </p>

            <div class="mt-8 flex flex-wrap justify-center lg:justify-start gap-x-6 gap-y-2 text-sm font-bold text-gray-500 uppercase tracking-wide">
              <span>✓ Diagnóstico Técnico</span>
              <span>✓ Repuestos Originales</span>
              <span>✓ Garantía Escrita</span>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row lg:flex-col gap-4 w-full sm:w-auto">
            <a
              href={whatsappLink}
              target="_blank"
              class="inline-flex items-center justify-center gap-3 rounded-2xl bg-yellow-400 px-10 py-5 text-base font-black text-black transition-all hover:scale-105 hover:bg-yellow-300 shadow-2xl shadow-yellow-400/20"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181 0 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884 0 2.225.569 3.811 1.54 5.451l-.992 3.613 3.931-.955z"/></svg>
              Hablar por WhatsApp
            </a>

            <a
              href={quoteLink}
              class="inline-flex items-center justify-center rounded-2xl border border-white/20 bg-white/5 px-10 py-5 text-base font-bold text-white backdrop-blur-md transition-all hover:bg-white hover:text-black"
            >
              Llenar Formulario
            </a>
          </div>

        </div>
      </div>
    </div>
  </ContentWidth>
</section>