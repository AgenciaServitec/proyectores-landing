---
import Icon from "astro-icon";
import { IconFontAwesome } from "../components";
import Drawer from "./Drawer";
---

<header id="header-item" class="header-relative">
  <div class="img-logo">
    <a href="/" rel="noreferrer"
      ><img src="./images/logo.webp" alt="Logo proyectores Servitec" /></a
    >
    <Drawer client:visible>
      <div class="item-menu-button">
        <IconFontAwesome
          width="30px"
          color="#fff000"
          path="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z"
        />
      </div>
    </Drawer>
  </div>
  <div class="item-menu">
    <ul>
      <li><a href="/">Inicio</a></li>
      <li><a href="/about-us">Nosotros</a></li>
      <li><a href="/services">Services</a></li>
      <li>
        <a href="/contact" class="anchor-icon">
          <Icon pack="mdi" name="phone" size={19} />
          Contacto
        </a>
      </li>
    </ul>
  </div>
</header>

<style lang="scss">
  //MOBILE AND TABLET
  .header-relative {
    width: 100%;
    padding: 0.7em;
    height: auto;

    .img-logo {
      display: flex;
      justify-content: space-between;
      align-items: center;

      img {
        width: 10em;
        height: auto;
        object-fit: cover;
      }
    }

    .item-menu {
      display: none;
    }
  }

  //DESKTOP
  @media (min-width: 920px) {
    .header-relative {
      display: flex;
      justify-content: space-between;
      padding: 1em;
      width: 100%;
      max-width: 1530px;
      margin: auto;

      .img-logo {
        display: initial;

        img {
          width: 11em;
          height: auto;
          object-fit: cover;
        }

        .item-menu-button {
          display: none;
        }
      }

      .item-menu {
        display: flex;
        justify-content: end;

        ul {
          list-style: none;
          padding: 0;
          display: flex;
          align-items: center;
          gap: 1em;

          li a {
            text-decoration: none;
            color: #fff;
          }

          li .anchor-icon {
            display: flex;
            place-items: center;
            gap: 0.2em;
            padding: 0.7em 1.2em;
            text-align: center;
            border-radius: 7em;
            border: none;
            font-weight: 600;
            cursor: pointer;
            background-color: #fff000;
            color: #000;
          }
        }
      }
    }
  }
</style>
